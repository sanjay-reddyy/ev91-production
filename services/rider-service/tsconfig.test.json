{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "types": ["node", "jest", "@types/jest"],
    "typeRoots": ["./node_modules/@types", "./tests/@types"],
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
