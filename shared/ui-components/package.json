{
  "name": "@ev91/ui",
  "version": "1.0.0",
  "description": "Cross-platform UI components for EV91 (React & React Native)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "react-native": "dist/index.native.js",
  "scripts": {
    "dev": "tsup --watch",
    "build": "npm run build:web && npm run build:native",
    "build:web": "tsup src/index.web.ts --format esm,cjs --dts --target web",
    "build:native": "tsup src/index.native.ts --format esm,cjs --dts --target react-native",
    "lint": "eslint src/**/*.{ts,tsx}",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "react-native": "./dist/index.native.js",
      "default": "./dist/index.web.js"
    }
  }
}
