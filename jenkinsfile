pipeline {
    agent any

    environment {
        DEPLOY_DIR = "/home/ubuntu/microservices"
        EC2_HOST = "3.109.106.132"
        EC2_USER = "ubuntu"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "ðŸ“¥ Cloning repository..."
                checkout scm
            }
        }

        // Uncomment this stage if you want to inject .env files
        /*
        stage('Inject .env Files') {
            steps {
